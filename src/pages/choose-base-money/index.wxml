<!-- choose-base-money页面 -->
<view class="exchange-list">
  <view
    wx:for="{{exchangeList}}"
    class="money-panel top-divider"
    data-money-key="{{item.key}}"
    bindtap="onChooseBaseMoney"
  >
    <image class="img" mode="aspectFit" src="{{'../../imgs/'+item.key+'.png'}}" />
    <!-- 显示货币单位 -->
    <text class="unit-label">{{item.key}}</text>
    <view class="right-panel">
      <!-- 当curMoneyKey等于item.key时，显示其为当前基础货币的标识 -->
      <text class="description-label" style="color:grey;" wx:if="{{curMoneyKey===item.key}}">当前基础货币</text>
      <!-- 显示货币名称 -->
      <text class="description-label">{{item.name}}</text>
    </view>
  </view>
</view>


